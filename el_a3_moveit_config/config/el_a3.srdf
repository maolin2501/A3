<?xml version="1.0" encoding="UTF-8"?>
<!--
EL-A3 Robot Arm SRDF (Semantic Robot Description Format)
定义规划组、末端执行器和自碰撞矩阵
-->
<robot name="EL-A3">
    <!-- Planning Groups -->
    <group name="arm">
        <chain base_link="base_link" tip_link="end_effector"/>
    </group>

    <!-- Group states (predefined poses) -->
    <group_state name="home" group="arm">
        <joint name="L1_joint" value="0"/>
        <joint name="L2_joint" value="0.785"/>
        <joint name="L3_joint" value="-0.785"/>
        <joint name="L4_joint" value="0"/>
        <joint name="L5_joint" value="0"/>
        <joint name="L6_joint" value="0"/>
    </group_state>

    <group_state name="ready" group="arm">
        <joint name="L1_joint" value="0"/>
        <joint name="L2_joint" value="0.785"/>
        <joint name="L3_joint" value="-1.57"/>
        <joint name="L4_joint" value="0"/>
        <joint name="L5_joint" value="0.785"/>
        <joint name="L6_joint" value="0"/>
    </group_state>

    <group_state name="zero" group="arm">
        <joint name="L1_joint" value="0"/>
        <joint name="L2_joint" value="0"/>
        <joint name="L3_joint" value="0"/>
        <joint name="L4_joint" value="0"/>
        <joint name="L5_joint" value="0"/>
        <joint name="L6_joint" value="0"/>
    </group_state>

    <!-- End Effector -->
    <end_effector name="ee" parent_link="end_effector" group="arm"/>

    <!-- Virtual Joint to World -->
    <virtual_joint name="world_joint" type="fixed" parent_frame="world" child_link="base_link"/>

    <!-- Disable collisions between adjacent links -->
    <disable_collisions link1="l1_urdf_urdf_asm" link2="l1_link_urdf_asm" reason="Adjacent"/>
    <disable_collisions link1="l1_link_urdf_asm" link2="l2_l3_urdf_asm" reason="Adjacent"/>
    <disable_collisions link1="l2_l3_urdf_asm" link2="l3_lnik_urdf_asm" reason="Adjacent"/>
    <disable_collisions link1="l3_lnik_urdf_asm" link2="l4_l5_urdf_asm" reason="Adjacent"/>
    <disable_collisions link1="l4_l5_urdf_asm" link2="part_9" reason="Adjacent"/>
    <disable_collisions link1="part_9" link2="l5_l6_urdf_asm" reason="Adjacent"/>
    <disable_collisions link1="l5_l6_urdf_asm" link2="end_effector" reason="Adjacent"/>
    
    <!-- Additional collision pairs that never collide -->
    <disable_collisions link1="l1_urdf_urdf_asm" link2="l2_l3_urdf_asm" reason="Never"/>
    <disable_collisions link1="l1_link_urdf_asm" link2="l3_lnik_urdf_asm" reason="Never"/>
    <disable_collisions link1="l2_l3_urdf_asm" link2="l4_l5_urdf_asm" reason="Never"/>
    <disable_collisions link1="l3_lnik_urdf_asm" link2="part_9" reason="Never"/>
    <disable_collisions link1="l4_l5_urdf_asm" link2="l5_l6_urdf_asm" reason="Never"/>
    <disable_collisions link1="part_9" link2="end_effector" reason="Never"/>
    <disable_collisions link1="base_link" link2="l1_urdf_urdf_asm" reason="Adjacent"/>
    
    <!-- 禁用大臂与第5轴连接件之间的碰撞检测（零位附近机械结构接近） -->
    <disable_collisions link1="l2_l3_urdf_asm" link2="part_9" reason="Never"/>
    <disable_collisions link1="l2_l3_urdf_asm" link2="l5_l6_urdf_asm" reason="Never"/>

</robot>

